{
  "compilerOptions": {
    "module": "es6",
    // "noImplicitAny": true,
    "target": "es6",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "typeRoots": [
      "./js/typings"
    ],
    "baseUrl": "./",
    "paths": {
      "easytimer": [
        "node_modules/easytimer.js/index"
      ]
    },
    "allowJs": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
